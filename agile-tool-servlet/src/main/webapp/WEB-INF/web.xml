<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>Users</servlet-name>
        <display-name>Users</display-name>
        <description>Users web interface</description>
        <servlet-class>org.markvarabyou.servlets.UsersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Users</servlet-name>
        <url-pattern>/api/Users</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Boards</servlet-name>
        <display-name>Boards</display-name>
        <description>Boards web interface</description>
        <servlet-class>org.markvarabyou.servlets.BoardsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Boards</servlet-name>
        <url-pattern>/api/Boards</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BoardColumns</servlet-name>
        <display-name>BoardColumns</display-name>
        <description>BoardColumns web interface</description>
        <servlet-class>org.markvarabyou.servlets.BoardColumnsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BoardColumns</servlet-name>
        <url-pattern>/api/BoardColumns</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>WorkItems</servlet-name>
        <display-name>WorkItems</display-name>
        <description>WorkItems web interface</description>
        <servlet-class>org.markvarabyou.servlets.WorkItemsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WorkItems</servlet-name>
        <url-pattern>/api/WorkItems</url-pattern>
    </servlet-mapping>
</web-app>
